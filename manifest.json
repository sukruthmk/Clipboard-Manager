{
    "manifest_version": 2,

    "name": "Clipboard Manager",
    "description": "This is a simple extension to store and manage clipboard history",
    "version": "1.0",
    "offline_enabled": true,
    "browser_action": {
        "default_icon": "assets/icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "page": "background.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "clipboardWrite",
        "clipboardRead",
        "storage"
    ]
}
